{
    "compilerOptions": {
        "typeRoots": ["./node_modules/@types", "src/types"],
        "baseUrl": "./src",
        "moduleResolution":"nodenext",
        "module": "NodeNext",
        "target": "ES2020",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "paths": {
            "@utils/*": ["utils/*"],
            "@controllers/*": ["controllers/*"],
            "@lib/*": ["lib/*"],
            "@services/*": ["services/*"],
            "@middlewares/*": ["middlewares/*"],
            "@config/*": ["config/*"],
            "@routes/*": ["routes/*"],
            "@types/*": ["src/types/*"],
          }
    },
    "include": ["src", "src/types"]
}